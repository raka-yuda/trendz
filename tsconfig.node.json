{ 
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true, 
  },
  "typeRoots": [
    "../node_modules/@types",
    "../@types"
  ]
}
